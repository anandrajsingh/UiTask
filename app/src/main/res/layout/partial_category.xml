<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:text="Music &amp; Fun"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView2"
            android:text="84 Podcasts"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_img3"
        app:layout_constraintStart_toEndOf="@id/layout1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:text="Exercise"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView4"
            android:text="96 Podcasts"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_img5"
        app:layout_constraintStart_toEndOf="@id/layout2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:text="Life &amp; Chill"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView6"
            android:text="56 Podcasts"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>